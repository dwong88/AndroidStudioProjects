<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:hint="Name"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_surname"
        android:layout_below="@+id/et_name"
        android:layout_alignParentRight="@+id/et_name"
        android:layout_alignParentEnd="@+id/et_name"
        android:layout_alignParentLeft="@+id/et_name"
        android:layout_alignParentStart="@+id/et_name"
        android:hint="Surname"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_age"
        android:layout_below="@+id/et_surname"
        android:layout_alignParentRight="@+id/et_surname"
        android:layout_alignParentEnd="@+id/et_surname"
        android:layout_alignParentLeft="@+id/et_surname"
        android:layout_alignParentStart="@+id/et_surname"
        android:hint="Age"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_username"
        android:layout_below="@+id/et_age"
        android:layout_alignParentRight="@+id/et_age"
        android:layout_alignParentEnd="@+id/et_age"
        android:layout_alignParentLeft="@+id/et_age"
        android:layout_alignParentStart="@+id/et_age"
        android:hint="Username"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_password"
        android:layout_below="@+id/et_username"
        android:layout_alignParentRight="@+id/et_username"
        android:layout_alignParentEnd="@+id/et_username"
        android:layout_alignParentLeft="@+id/et_username"
        android:layout_alignParentStart="@+id/et_username"
        android:hint="Password"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btn_reg"
        android:layout_below="@+id/et_password"
        android:layout_alignParentRight="@+id/et_password"
        android:layout_alignParentEnd="@+id/et_password"
        android:layout_alignParentLeft="@+id/et_password"
        android:layout_alignParentStart="@+id/et_password"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="50dp"
        android:onClick="OnReg"/>
</RelativeLayout>